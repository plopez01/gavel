{
  "name": "gavel",
  "author": "Plopez",
  "repository": "https://github.com/plopez01/gavel",
  "displayName": "Gavel",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gavel.dashboard",
    "onCommand:gavel.problem",
    "onCommand:gavel.submit",
    "onCommand:gavel.check"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gavel.dashboard",
        "title": "Show Judge's dashboard",
        "category": "Gavel"
      },
      {
        "command": "gavel.problem",
        "title": "Set working problem",
        "category": "Gavel"
      },
      {
        "command": "gavel.submit",
        "title": "Submit problem to the judge",
        "category": "Gavel"
      },
      {
        "command": "gavel.check",
        "title": "Compile and check against public testcase",
        "category": "Gavel"
      }
    ],
    "configuration": {
      "title": "Judge settings",
      "properties": {
        "session.storagePath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Set the path where your session key will be stored."
        },
        "judge.compiler": {
          "type": "string",
          "default": "P1++",
          "description": "Set the compiler the judge will use when submitting."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.15.9",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "request": "^2.88.2"
  }
}
